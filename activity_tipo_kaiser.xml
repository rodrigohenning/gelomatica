<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tipo_kaiser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.henning.gelomatica.tipoKaiser"
    android:background="@android:color/background_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/button9"
        android:background="@mipmap/kaiser_piriguete"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="latinha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/button2"
        android:background="@mipmap/kaiser_lata"
        android:padding="30dp"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:onClick="lata" />/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/button10"
        android:background="@mipmap/kaiser_grrafa"
        android:padding="30dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="garrafa" />/>

    <TextView
        android:text="Lata 283ml (Piriguete)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <TextView
        android:text="Lata  310ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:text="Garrafa 600ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <TextView
        android:text="Selecione o Tipo de busca "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView8" />

</RelativeLayout>
